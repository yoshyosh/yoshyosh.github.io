<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title><%= current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <%= stylesheet_link_tag "normalize" %>
    <%= stylesheet_link_tag "skeleton" %>
    <%= stylesheet_link_tag "base" %>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-48894720-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-48894720-1');
    </script>

  </head>
  <body>
  <div class="container dont-break-out">
    <div id="main" role="main">
      <span class="yosh-post-meta"><%= current_article.date.strftime('%e %b %Y') unless current_article.nil? %></span>
      <h1><%= current_article.title unless current_article.nil? %></h1>
      <%= yield %>
    </div>
  </div>  
  </body>
</html>
